generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId       String        @id @unique @default(uuid())
  email        String        @unique
  name         String
  password     String
  Comments     Comment[]
  Dairy        Diary[]
  Measurements Measurements?
  Posts        Post[]
  workouts     Workout[]
}

model Workout {
  workoutId String  @id @unique @default(uuid())
  type      String
  bodyPart  String
  Reps      Int
  Set       Int
  ownerId   String?
  User      User?   @relation(fields: [ownerId], references: [userId])
}

model Measurements {
  id         String @id @default(uuid())
  height     Int
  bodyweight Int
  wingSpan   Int
  bicepSize  Int
  quadSize   Int
  userId     String @unique
  user       User   @relation(fields: [userId], references: [userId])
}

model Diary {
  id         String   @id @unique @default(uuid())
  calories   Int
  carb       Int
  createdAt  DateTime @default(now())
  fat        Int
  mealType   String
  name       String
  protein    Int
  servings   Int
  userUserId String?
  User       User?    @relation(fields: [userUserId], references: [userId])
}

model Post {
  id       String    @id @default(uuid())
  title    String
  body     String
  topic    String
  ownerId  String
  Comments Comment[]
  User     User      @relation(fields: [ownerId], references: [userId])
}

model Comment {
  id      String  @id @default(uuid())
  content String
  ownerId String?
  postId  String?
  User    User?   @relation(fields: [ownerId], references: [userId])
  Post    Post?   @relation(fields: [postId], references: [id])
}
