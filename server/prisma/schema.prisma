// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId           String  @id @unique @default(uuid())
  email            String  @unique
  name             String
  password         String
  workout          Workout @relation(fields: [workoutWorkoutId], references: [workoutId])
  gen              String
  workoutWorkoutId String  @unique
}

model Workout {
  workoutId String @id @unique @default(uuid())
  type      String
  bodyPart  String
  Reps      Int
  Set       Int
  User      User?
}
